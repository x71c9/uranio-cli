{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"allowJs": true,
		"lib": [ "es2015" ],
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"declaration": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"strictPropertyInitialization": true,
		"noImplicitThis": true,
		"alwaysStrict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"sourceMap": true
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"src/__test__/**/*"
	]
}
